pipeline {
    
    agent any
    tools {maven "MavenV3"}
    stages{
        stage("Checkout"){
            steps{
                git branch: "main", url: "https://github.com/Amr-tmorot/SpringPetClinic.git"
            }
        }
        stage("build"){
            steps{
                sh "mvn compile"
            }
        }
        stage("test"){
            steps{
                sh "mvn test"
            }
        }
        stage("package"){
            steps{
                sh "mvn package"
            }
        }
        stage("deploy"){
            steps{
                sh "java -jar ./target/*.jar"
            }
        }
        
    }
    
}
